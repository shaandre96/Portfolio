{
    "name": "Color Picker",
    "description": "Just another color picker",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "./Popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./contentScripts.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}